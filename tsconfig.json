{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"]
    },
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "jsx": "react",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "esModuleInterop": true
  }
}
